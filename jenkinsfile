pipeline {
  agent none
  environment {
    CI = 'true'
  }
  stages {
    stage('Checkout') {
      agent any
      steps {
        // start checkout
        echo 'start checkout'
        echo "Building ${BRANCH_NAME}"
        echo "Current workspace : ${workspace}"

        // copy workspace => app directory
        echo 'copy workspace diretory'
        sh 'sudo cp -rf ./* /app'

        // copy config => app directory
        echo 'copy config diretory'
        sh 'sudo cp -rf /config /app'
      }
    }
    stage('App Build') {
      agent any
      steps {
        retry(2) {
          timeout(2) { // 2minutes
            // npm install
            echo 'start module install'
            sh 'sudo npm install --prefix /app install /app'

            // npm cache verify
            echo 'start cache verify'
            sh 'npm cache verify'

            // npm build
            echo 'start app build'
            sh 'sudo npm --prefix /app run-script build /app'
          }
        }
      }
    }
    stage('App Production') {
      agent any
      steps {
        retry(2) {
          timeout(2) { // 2minutes
            // pm2 delete & start
            echo 'pm2 product delete & start'
            sh 'sudo npm --prefix /app run-script product'
          }
        }
      }
    }
  }
}
